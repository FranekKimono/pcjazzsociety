{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.x",
    "pnpm": "10.x"
  },
  "scripts": {
    "build": "pnpm exec playwright install chromium && nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "start": "node .output/server/index.mjs",
    "postinstall": "nuxt prepare && pnpm run build",
    "clean": "rm -rf .nuxt .output dist node_modules/.vite",
    "fresh": "pnpm clean && pnpm dev"
  },
  "dependencies": {
    "@nuxt/content": "^3.5.1",
    "@nuxt/image": "^1.10.0",
    "@nuxtjs/color-mode": "^3.5.2",
    "@nuxtjs/i18n": "^9.5.5",
    "@nuxtjs/mdc": "^0.15.0",
    "@nuxtjs/robots": "^5.2.10",
    "@nuxtjs/sitemap": "^7.3.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "better-sqlite3": "^11.10.0",
    "install": "^0.13.0",
    "mermaid": "^11.6.0",
    "nuxt": "^3.17.4",
    "nuxt-gtag": "^3.0.2",
    "playwright": "^1.52.0",
    "rehype-mermaid": "^3.0.0",
    "remark-extended-table": "^2.0.3",
    "remark-mermaidjs": "^7.0.0",
    "sharp": "^0.33.5",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "@parcel/watcher-android-arm64",
      "@parcel/watcher-darwin-arm64",
      "@parcel/watcher-darwin-x64",
      "@parcel/watcher-linux-arm64",
      "@parcel/watcher-linux-x64",
      "@parcel/watcher-windows-x64",
      "better-sqlite3",
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "sharp"
    ]
  },
  "devDependencies": {
    "@nuxt/devtools": "^1.7.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "remark-attr": "^0.11.1",
    "tailwindcss": "~3.4.17",
    "typescript": "^5.8.3"
  }
}
